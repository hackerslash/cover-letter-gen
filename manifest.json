{
    "manifest_version": 3,
    "name": "Job Cover Letter Generator",
    "version": "1.0",
    "description": "Generate a cover letter based on job description and resume.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://webhook-redirect.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon64.png"
        }
    }
}

